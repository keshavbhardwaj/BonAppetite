<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bhardwaj.keshav.bonappetite.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/Layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/business_side_add_item_but"
            android:visibility="visible">

            <TextView
                android:id="@+id/T1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bon Appetite"
                android:textColor="#f5f7f5"
                android:textAllCaps="false"
                android:layout_marginLeft="15dp"
                android:paddingBottom="5dp"
                android:shadowColor="#000000"
                android:shadowDx="2.5"
                android:shadowDy="2.3"
                android:shadowRadius="5.9"
                android:textSize="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </RelativeLayout>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="#00ffffff"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal">
        </ImageButton>

        <ImageButton
            android:id="@+id/businessSide"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00ffffff"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_business_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:text="Business Side"/>
        <ImageButton
            android:id="@+id/customerSide"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00ffffff"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_face_black_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:text="Customer Side"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
